<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="HibernatePersistence"
		transaction-type="RESOURCE_LOCAL">
		<class>com.synerzip.projectmanagementapp.model.Project</class>
		<class>com.synerzip.projectmanagementapp.model.Company</class>
		<class>com.synerzip.projectmanagementapp.model.User</class>
		<class>com.synerzip.projectmanagementapp.model.Token</class>
		<class>com.synerzip.projectmanagementapp.model.ProjectEmployee</class>
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.password" value="synerzip" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/project_management?autoReconnect=true&amp;u‌​seSSL=false" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.search.default.directory_provider" value="filesystem" />
			<property name="hibernate.search.default.indexBase" value="Home/lucene/indexes/first" />
		</properties>
	</persistence-unit>
</persistence>